<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<Pane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.application.controllers.SignInController">
    <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true">
        <viewport>
            <Rectangle2D/>
        </viewport>
        <Image url="@../../../fxml-images/demo-background.png"/>
    </ImageView>
    <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0"
          prefWidth="300.0"/>
    <VBox alignment="CENTER" layoutX="300.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minWidth="200.0" prefHeight="400.0" prefWidth="300.0" spacing="10.0">
        <Text fill="#415e97" fontSmoothingType="LCD" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Sign in to Account" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <effect>
                <DropShadow height="0.5" radius="0.0" spread="0.23" width="0.5">
                    <color>
                        <Color red="1.0" green="1.0" blue="1.0"/>
                    </color>
                </DropShadow>
            </effect>
        </Text>
        <VBox alignment="CENTER" spacing="15.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <TextField fx:id="emailTextField" alignment="CENTER" focusTraversable="false" maxHeight="35.0"
                       minHeight="35.0" prefHeight="35.0" promptText="Email or username" styleClass="textField"
                       stylesheets="@../../../fxml-css/sign-in-activity.css">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
                <effect>
                    <DropShadow height="12.21" radius="7.07" width="18.07">
                        <color>
                            <Color red="0.6710526347160339" green="0.6710526347160339" blue="0.6710526347160339"/>
                        </color>
                    </DropShadow>
                </effect>
            </TextField>
            <VBox alignment="CENTER" spacing="8.0">
                <PasswordField fx:id="passwordTextField" alignment="CENTER" focusTraversable="false" maxHeight="35.0"
                               minHeight="35.0" prefHeight="35.0" promptText="Password" styleClass="textField"
                               stylesheets="@../../../fxml-css/sign-in-activity.css">
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                    <effect>
                        <DropShadow height="12.21" radius="7.07" width="18.07">
                            <color>
                                <Color red="0.6710526347160339" green="0.6710526347160339" blue="0.6710526347160339"/>
                            </color>
                        </DropShadow>
                    </effect>
                </PasswordField>
                <Label fx:id="signInErrorLabel" textFill="#ff3a3a">
                    <font>
                        <Font name="Arial" size="12.0"/>
                    </font>
                </Label>
            </VBox>
        </VBox>
        <VBox alignment="CENTER" prefWidth="300.0" spacing="20.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Button focusTraversable="false" maxHeight="30.0" maxWidth="1.7976931348623157E308" minHeight="30.0"
                        mnemonicParsing="false" onAction="#onSignInListener" prefHeight="30.0" prefWidth="125.0"
                        styleClass="signInButton" stylesheets="@../../../fxml-css/sign-in-activity.css" text="Sign In">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <font>
                        <Font name="Arial Bold" size="13.0"/>
                    </font>
                </Button>
                <Button focusTraversable="false" maxHeight="30.0" maxWidth="1.7976931348623157E308" minHeight="30.0"
                        mnemonicParsing="false" onAction="#onSignIUpListener" prefHeight="30.0" prefWidth="125.0"
                        styleClass="signUpButton" stylesheets="@../../../fxml-css/sign-in-activity.css" text="Sign Up">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Button maxHeight="30.0" maxWidth="-Infinity" minHeight="30.0" minWidth="260.0" mnemonicParsing="false"
                        onAction="#onAboutUsListener" prefHeight="30.0" styleClass="contactUsButton"
                        stylesheets="@../../../fxml-css/sign-in-activity.css" text="About Us" textFill="#547794">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </HBox>
        </VBox>
    </VBox>
</Pane>
